{
  //#if (ForwardedHeaders)
  "ForwardedHeaders": {
    //#if (HostFiltering)
    "AllowedHosts": [
      "*"
    ]
    //#endif
  },
  //#elif (HostFiltering)
  "HostFiltering": {
    "AllowedHosts": [
      "*"
    ]
  },
  //#endif
  "GraphQL": {
    // Whether to include exception details in the query output.
    "IncludeExceptionDetails": true,
    // Configures Apollo tracing in the query output. Always enables it for every query.
    "TracingPreference": "Always"
  },
  //#if (PersistedQueries)
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  //#endif
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Information"
      }
    }
  }
}
