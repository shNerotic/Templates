{
  //#if (ForwardedHeaders)
  "ForwardedHeaders": {
    //#if (HostFiltering)
    "AllowedHosts": [
      "*"
    ]
    //#endif
  },
  //#elif (HostFiltering)
  "HostFiltering": {
    "AllowedHosts": [
      "*"
    ]
  },
  //#endif
  "GraphQL": {
    // Whether to include exception details in the query output.
    "IncludeExceptionDetails": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Information"
      }
    }
  }
}
